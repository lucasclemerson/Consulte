<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_80"
        android:contentDescription="@string/descricao_logomarca"
        app:srcCompat="@drawable/logo_consulte" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="@dimen/margin_20"
        android:fontFamily="@font/normal_signika"
        android:text="@string/forma_desenvolvimento"
        android:textAlignment="center"
        android:textColor="@color/color_secundary"
        android:textSize="@dimen/texto_medio" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_40"
        android:layout_marginEnd="@dimen/margin_40"
        android:orientation="vertical"
        android:layout_below="@+id/titulo"
        android:layout_marginTop="@dimen/margin_80">

        <Button
            android:id="@+id/btn_entrar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"
            android:fontFamily="@font/normal_signika"
            android:text="@string/ir_login"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/texto_medio"
            android:background="@drawable/bck_primary"
            android:layout_marginBottom="@dimen/margin_20"/>

        <Button
            android:id="@+id/btn_cadastrar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"
            android:text="@string/ir_cadastro"
            android:textAllCaps="false"
            android:textSize="@dimen/texto_medio"
            android:textAlignment="center"
            android:fontFamily="@font/normal_signika"
            android:textColor="@color/color_secundary"
            android:background="@drawable/bck_secundary"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_40"
        android:fontFamily="@font/normal_signika"
        android:text="@string/versao"
        android:textAlignment="center"
        android:textColor="@color/color_secundary"
        android:textSize="@dimen/texto_normal" />
</RelativeLayout>