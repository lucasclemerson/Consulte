<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".PerfilActivity"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btn_voltar"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="@dimen/width_80"
        android:layout_height="@dimen/height_60"
        android:contentDescription="@string/descricao_voltar"
        android:background="@color/white"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:textColor="@color/color_secundary"
        android:textSize="@dimen/texto_pequeno" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_180">

        <LinearLayout
            android:layout_marginStart="@dimen/margin_40"
            android:layout_width="@dimen/width_120"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imagem_principal"
                android:layout_width="@dimen/width_60"
                android:layout_height="@dimen/width_60"
                app:srcCompat="@drawable/homem_moreno"
                android:background="@drawable/bck_body"
                android:layout_gravity="center"
                android:contentDescription="@string/descricao_default"/>

            <TextView
                android:layout_marginTop="@dimen/margin_10"
                android:id="@+id/nickname"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:fontFamily="@font/normal_signika"
                android:text="@string/lbl_nickname"
                android:textSize="@dimen/texto_normal"
                android:textAlignment="center"
                android:textColor="@color/color_secundary" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_40"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">


            <LinearLayout
                android:layout_marginEnd="@dimen/margin_40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="end">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/image1"
                        android:layout_margin="@dimen/margin_10"
                        android:layout_width="@dimen/width_80"
                        android:layout_height="@dimen/height_80"
                        android:background="@color/white"
                        android:contentDescription="@string/descricao_default"
                        app:srcCompat="@drawable/homem_moreno"
                        android:layout_gravity="start"/>

                    <ImageButton
                        android:id="@+id/image2"
                        android:layout_margin="@dimen/margin_10"
                        android:layout_width="@dimen/width_80"
                        android:layout_height="@dimen/height_80"
                        android:background="@color/white"
                        android:contentDescription="@string/descricao_default"
                        app:srcCompat="@drawable/mulher_morena"
                        android:layout_gravity="start"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <ImageButton
                        android:id="@+id/image3"
                        android:layout_margin="@dimen/margin_10"
                        android:layout_width="@dimen/width_80"
                        android:layout_height="@dimen/height_80"
                        android:background="@color/white"
                        android:contentDescription="@string/descricao_default"
                        app:srcCompat="@drawable/mulher_galega"
                        android:layout_gravity="start"/>

                    <ImageButton
                        android:id="@+id/image4"
                        android:layout_margin="@dimen/margin_10"
                        android:layout_width="@dimen/width_80"
                        android:layout_height="@dimen/height_80"
                        android:background="@color/white"
                        android:contentDescription="@string/descricao_default"
                        app:srcCompat="@drawable/homem_galego"
                        android:layout_gravity="start"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/margin_40"
        android:layout_marginStart="@dimen/margin_40"
        android:layout_marginTop="@dimen/margin_20"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nome_completo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_60"
            android:fontFamily="@font/normal_signika"
            android:autofillHints="name"
            android:inputType="text"
            android:maxLength="50"
            android:textColor="@color/color_secundary"
            android:textSize="@dimen/texto_medio"
            android:textColorHint="@color/color_secundary"
            android:hint="@string/lbl_nome">
        </EditText>


        <EditText
            android:autofillHints="password"
            android:id="@+id/senha"
            android:textColorHint="@color/color_secundary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_60"
            android:maxLength="20"
            android:fontFamily="@font/normal_signika"
            android:textSize="@dimen/texto_medio"
            android:textColor="@color/color_secundary"
            android:inputType="text"
            android:hint="@string/lbl_senha">
        </EditText>


        <Button
            android:id="@+id/btn_atualizar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"
            android:layout_marginTop="@dimen/margin_40"
            android:text="@string/atualizar"
            android:fontFamily="@font/normal_signika"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/texto_medio"
            android:background="@drawable/bck_primary"/>
    </LinearLayout>
</LinearLayout>