<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ComecoActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_80"
        android:contentDescription="@string/descricao_logomarca"
        app:srcCompat="@drawable/logo_consulte" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="@dimen/margin_20"
        android:fontFamily="@font/normal_signika"
        android:text="@string/forma_desenvolvimento"
        android:textAlignment="center"
        android:textColor="@color/color_secundary"
        android:textSize="@dimen/texto_medio" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo"
        android:layout_marginStart="@dimen/margin_40"
        android:layout_marginTop="@dimen/margin_80"
        android:layout_marginEnd="@dimen/margin_40"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/dots_pagina"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"
            android:indeterminateDrawable="@drawable/bck_rotate"
            android:max="100" />

        <TextView
            android:id="@+id/status_progresso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:fontFamily="@font/normal_signika"
            android:textAlignment="center"
            android:textColor="@color/color_secundary"
            android:textSize="@dimen/texto_normal" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_40"
        android:fontFamily="@font/normal_signika"
        android:text="@string/versao"
        android:textAlignment="center"
        android:textColor="@color/color_secundary"
        android:textSize="@dimen/texto_normal" />

</RelativeLayout>