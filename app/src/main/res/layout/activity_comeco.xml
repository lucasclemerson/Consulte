<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ComecoActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:contentDescription="Imagem da logomarca"
        app:srcCompat="@drawable/logo_consulte" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="50dp"
        android:text="@string/forma_desenvolvimento"
        android:textAlignment="center"
        android:fontFamily="@font/normal_signika"
        android:textSize="20sp"
        android:textColor="@color/color_secundary"/>

    <ProgressBar
        android:id="@+id/dots_pagina"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:max="100"
        android:layout_below="@+id/titulo"
        android:layout_marginStart="150dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="150dp"
        android:indeterminateDrawable="@drawable/bck_rotate" />

    <TextView
        android:id="@+id/status_progresso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="100%"
        android:textAlignment="center"
        android:fontFamily="@font/normal_signika"
        android:layout_marginBottom="150dp"
        android:textSize="20sp"
        android:textColor="@color/color_secundary"/>



    <TextView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:text="@string/versao"
        android:layout_gravity="bottom"
        android:textAlignment="center"
        android:fontFamily="@font/normal_signika"
        android:textColor="@color/color_secundary"
        android:textSize="16sp"
        tools:ignore="RtlCompat" />
</LinearLayout>