<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".InicioActivity">

    <!--cabeçario-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_120">

        <LinearLayout
            android:layout_marginStart="@dimen/margin_40"
            android:layout_width="@dimen/width_120"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imagem_principal"
                android:layout_width="@dimen/height_40"
                android:layout_height="@dimen/height_40"
                android:layout_gravity="center"
                android:src="@drawable/homem_moreno"
                android:contentDescription="@string/descricao_default"/>

            <TextView
                android:id="@+id/lbl_nome_completo"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_10"
                android:fontFamily="@font/normal_signika"
                android:text="@string/lbl_nickname"
                android:textAlignment="center"
                android:textColor="@color/color_primary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_40"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <ImageView
                android:layout_marginEnd="@dimen/margin_40"
                android:layout_width="@dimen/width_80"
                android:layout_height="@dimen/width_80"
                android:layout_gravity="end"
                android:contentDescription="@string/descricao_logomarca"
                app:srcCompat="@drawable/logo_consulte"/>
        </LinearLayout>
    </LinearLayout>


    <!-- Corpo da aplicação-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-60dp"
        android:orientation="vertical"
        android:background="@drawable/bck_body">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginEnd="@dimen/margin_40"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_40">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imagem_listar_pessoas"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/bck_white"
                    app:srcCompat="@drawable/pessoa"
                    android:contentDescription="@string/descricao_default"
                    android:layout_margin="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ico_pessoas"
                    android:textSize="@dimen/texto_normal"
                    android:textColor="@color/color_primary"
                    android:textAlignment="center"
                    android:fontFamily="@font/normal_signika"
                    android:layout_marginTop="-30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imagem_listar_prontuarios"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/bck_white"
                    android:contentDescription="@string/descricao_default"
                    app:srcCompat="@drawable/pasta_de_arquivo"
                    android:layout_margin="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ico_prontuarios"
                    android:textAlignment="center"
                    android:textSize="@dimen/texto_normal"
                    android:fontFamily="@font/normal_signika"
                    android:textColor="@color/color_primary"
                    android:layout_marginTop="-30dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/margin_40"
            android:layout_marginStart="@dimen/margin_40">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/bck_white"
                    app:srcCompat="@drawable/mudar"
                    android:contentDescription="@string/descricao_default"
                    android:layout_margin="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ico_realocar_paciente"
                    android:textSize="@dimen/texto_normal"
                    android:textColor="@color/color_primary"
                    android:textAlignment="center"
                    android:fontFamily="@font/normal_signika"
                    android:layout_marginTop="-30dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imagem_editar_perfil"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/bck_white"
                    app:srcCompat="@drawable/editar"
                    android:contentDescription="@string/descricao_default"
                    android:layout_margin="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ico_editar_perfil"
                    android:textAlignment="center"
                    android:textSize="@dimen/texto_normal"
                    android:fontFamily="@font/normal_signika"
                    android:textColor="@color/color_primary"
                    android:layout_marginTop="-30dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/margin_40"
            android:layout_marginStart="@dimen/margin_40">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/bck_white"
                    app:srcCompat="@drawable/backup"
                    android:contentDescription="@string/descricao_default"
                    android:layout_margin="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/descricao_default"
                    android:text="@string/ico_realizar_backup"
                    android:textSize="@dimen/texto_normal"
                    android:textColor="@color/color_primary"
                    android:textAlignment="center"
                    android:fontFamily="@font/normal_signika"
                    android:layout_marginTop="-30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imagem_faleconosco"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/bck_white"
                    android:contentDescription="@string/descricao_default"
                    app:srcCompat="@drawable/whatsapp"
                    android:layout_margin="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ico_faleconosco"
                    android:textSize="@dimen/texto_normal"
                    android:textColor="@color/color_primary"
                    android:textAlignment="center"
                    android:fontFamily="@font/normal_signika"
                    android:layout_marginTop="-30dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_40"
            android:layout_marginStart="@dimen/margin_40"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_finalizar_sessao"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_button"
                android:textColor="@color/color_primary"
                android:background="@drawable/bck_white"
                android:text="@string/finalizar_sessao"
                android:textAllCaps="false"
                android:textSize="@dimen/texto_medio"
                android:fontFamily="@font/normal_signika"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/versao"
                android:fontFamily="@font/normal_signika"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/texto_normal"
                android:layout_marginTop="@dimen/margin_40" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>