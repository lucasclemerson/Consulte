<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start"
            android:src="@drawable/pasta_de_arquivo"/>

        <TextView
            android:id="@+id/numero_prontuario"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="0"
            android:fontFamily="@font/normal_signika"
            android:textSize="20sp"
            android:textColor="@color/color_secundary"/>



        <TextView
            android:id="@+id/numero_de_pessoas"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginStart="60dp"
            android:fontFamily="@font/normal_signika"
            android:textSize="20sp"
            android:layout_marginEnd="60dp"
            android:textColor="@color/color_secundary"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:src="@drawable/pessoa"/>

    </android.support.v7.widget.Toolbar>
</LinearLayout>