<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ProntuarioActivity">

    <!--aba de pesquisa-->
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/bck_gradient">

        <ImageButton
            android:layout_gravity="start"
            android:id="@+id/btn_voltar"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="@drawable/bck_transparente"
            android:src="@drawable/ic_baseline_arrow_back_ios_24_light"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <android.support.design.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <EditText
            android:id="@+id/campo_pesquisa"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:hint="Número do prontuário"
            android:inputType="text"
            android:maxLength="20"
            android:outlineSpotShadowColor="@color/white"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/limpar_pesquisa"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:text="Limpar"
            android:textAllCaps="false"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/normal_signika"
            android:textColor="@color/color_secundary"
            android:background="@drawable/bck_white"
            android:src="@drawable/ic_baseline_search_24" />
    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/listViewProntuarios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:outlineSpotShadowColor="@color/black"></android.support.v7.widget.RecyclerView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/adiciona_prontuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_secundary"
        android:tint="@color/white"
        android:layout_marginTop="-100dp"
        android:layout_gravity="end"
        android:layout_marginEnd="30dp"
        app:srcCompat="@android:drawable/ic_input_add" />
</LinearLayout>